<Project>
  <!-- See https://aka.ms/dotnet/msbuild/customize for more details on customizing your build -->
  <Target Name="_FrameworkCopy" AfterTargets="Build">
      <Message Text="Copying _framework" Importance="high" />
	  <ItemGroup>
		  <_FrameworkFiles Include="$(ProjectDir)bin\$(Configuration)\net9.0\wwwroot\_framework\*.*" />
	  </ItemGroup>

	  <RemoveDir Directories="$(ProjectDir)..\TestSite\_framework\" />
	  <Copy SourceFiles="@(_FrameworkFiles)"
			DestinationFolder="$(ProjectDir)..\TestSite\_framework\"
			SkipUnchangedFiles="true" />
  </Target>
</Project>
